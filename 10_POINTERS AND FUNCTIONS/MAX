#include <stdio.h>

// Function to find maximum using pointers
void findMax(int *a, int *b, int *max) {
    if (*a > *b)
        *max = *a;
    else
        *max = *b;
}

int main() {
    int num1, num2, maximum;

    printf("Enter two numbers: ");
    scanf("%d %d", &num1, &num2);

    // Call function with addresses
    findMax(&num1, &num2, &maximum);

    printf("Maximum value is: %d\n", maximum);

    return 0;
}
