#include <stdio.h>

int main() {
    int arr[100], n, value, i, pos = -1;

    // Input number of elements
    printf("Enter the number of elements: ");
    scanf("%d", &n);

    // Input array elements
    printf("Enter %d elements:\n", n);
    for (i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    // Input value to remove
    printf("Enter the value to remove: ");
    scanf("%d", &value);

    // Search for the value's position
    for (i = 0; i < n; i++) {
        if (arr[i] == value) {
            pos = i;
            break;
        }
    }

    // If value is found, delete it
    if (pos != -1) {
        for (i = pos; i < n - 1; i++) {
            arr[i] = arr[i + 1];  // Shift left
        }
        n--; // Reduce array size
        printf("Array after removing %d:\n", value);
        for (i = 0; i < n; i++) {
            printf("%d ", arr[i]);
        }
        printf("\n");
    } else {
        printf("Value %d not found in the array.\n", value);
    }

    return 0;
}
