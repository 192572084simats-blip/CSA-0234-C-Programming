#include <stdio.h>

// Define structure for Car
struct Car {
    char brand[50];
    char model[50];
    int year;
    char color[20];
    float price;
};

int main() {
    struct Car car1;

    // Input data
    printf("Enter car brand: ");
    scanf("%s", car1.brand);
    
    printf("Enter car model: ");
    scanf("%s", car1.model);
    
    printf("Enter car year: ");
    scanf("%d", &car1.year);
    
    printf("Enter car color: ");
    scanf("%s", car1.color);
    
    printf("Enter car price: ");
    scanf("%f", &car1.price);

    // Display car info
    printf("\nCar Details:\n");
    printf("Brand: %s\n", car1.brand);
    printf("Model: %s\n", car1.model);
    printf("Year: %d\n", car1.year);
    printf("Color: %s\n", car1.color);
    printf("Price: %.2f\n", car1.price);

    return 0;
}
