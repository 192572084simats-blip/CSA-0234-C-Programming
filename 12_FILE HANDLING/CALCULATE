#include <stdio.h>

int main() {
    FILE *fp;
    char filename[100];
    int num, sum = 0, count = 0;
    float average;

    printf("Enter the filename: ");
    scanf("%s", filename);

    fp = fopen(filename, "r");

    if (fp == NULL) {
        printf("Error: Could not open file.\n");
        return 1;
    }

    // Read numbers and calculate sum, count
    while (fscanf(fp, "%d", &num) == 1) {
        sum += num;
        count++;
    }

    fclose(fp);

    if (count == 0) {
        printf("No numbers found in the file.\n");
    } else {
        average = (float)sum / count;
        printf("\nFile Calculation Results:\n");
        printf("Total Numbers: %d\n", count);
        printf("Sum          : %d\n", sum);
        printf("Average      : %.2f\n", average);
    }

    return 0;
}
