#include <stdio.h>
#include <string.h>

int main() {
    char str[100], rev[100];
    int i, len;

    // Input string
    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);

    // Remove newline character if present
    if (str[strlen(str) - 1] == '\n')
        str[strlen(str) - 1] = '\0';

    len = strlen(str);

    // Reverse the string
    for (i = 0; i < len; i++) {
        rev[i] = str[len - i - 1];
    }
    rev[len] = '\0'; // Null-terminate the reversed string

    // Output
    printf("Reversed string: %s\n", rev);

    return 0;
}
