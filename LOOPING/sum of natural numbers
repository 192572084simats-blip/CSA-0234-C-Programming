#include <stdio.h>

int main() {
    int n, i, sum = 0;

    // Input limit
    printf("Enter the value of n: ");
    scanf("%d", &n);

    // Loop to calculate sum
    for (i = 1; i <= n; i++) {
        sum += i;  // same as sum = sum + i
    }

    // Display result
    printf("Sum of first %d natural numbers is: %d\n", n, sum);

    return 0;
}
