#include <stdio.h>

int main() {
    int arr[100], n, i, value, pos = -1;

    // Input size of array
    printf("Enter the number of elements: ");
    scanf("%d", &n);

    // Input array elements
    printf("Enter %d elements:\n", n);
    for (i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    // Input value to delete
    printf("Enter the value to delete: ");
    scanf("%d", &value);

    // Find the position of the value
    for (i = 0; i < n; i++) {
        if (arr[i] == value) {
            pos = i;
            break;
        }
    }

    // If value is found, delete and shift
    if (pos != -1) {
        for (i = pos; i < n - 1; i++) {
            arr[i] = arr[i + 1];
        }
        n--; // Reduce array size
        printf("Array after deleting %d:\n", value);
        for (i = 0; i < n; i++) {
            printf("%d ", arr[i]);
        }
        printf("\n");
    } else {
        printf("Value %d not found in the array.\n", value);
    }

    return 0;
}
