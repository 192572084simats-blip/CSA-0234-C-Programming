#include <stdio.h>

int main() {
    int arr[100], n, i, min;

    // Input size of array
    printf("Enter the number of elements: ");
    scanf("%d", &n);

    // Input array elements
    printf("Enter %d elements:\n", n);
    for (i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    // Initialize min with the first element
    min = arr[0];

    // Loop to find minimum
    for (i = 1; i < n; i++) {
        if (arr[i] < min) {
            min = arr[i];
        }
    }

    // Display result
    printf("Minimum element = %d\n", min);

    return 0;
}
