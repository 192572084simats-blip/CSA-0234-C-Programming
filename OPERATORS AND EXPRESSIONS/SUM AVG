#include <stdio.h>

int main() {
    int num1, num2;
    int sum;
    float avg;

    // Input two numbers
    printf("Enter first number: ");
    scanf("%d", &num1);

    printf("Enter second number: ");
    scanf("%d", &num2);

    // Calculate sum and average
    sum = num1 + num2;
    avg = sum / 2.0;  // Use 2.0 to get float result

    // Display results
    printf("\nSum = %d\n", sum);
    printf("Average = %.2f\n", avg);

    return 0;
}
